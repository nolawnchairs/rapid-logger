{
  "name": "rapid-logger",
  "version": "0.1.0",
  "description": "A customizable, speedy, and fully-typed logger for Node projects with deferred evaluation",
  "keywords": [
    "logger",
    "logging",
    "log",
    "performant",
    "fast",
    "deferred evaluation",
    "deferred logging"
  ],
  "homepage": "https://github.com/nolawnchairs/rapid-logger",
  "repository": {
    "type": "git",
    "url": "https://github.com/nolawnchairs/rapid-logger.git"
  },
  "bugs": {
    "url": "https://github.com/nolawnchairs/rapid-logger/issues"
  },
  "author": "Michael Wieczorek",
  "license": "MIT",
  "types": "index.d.ts",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "../src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "dts-bundle-generator": "^7.2.0",
    "eslint": "^8.35.0",
    "jest": "^29.5.0",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "rimraf lib && npm run compile && npm run define",
    "compile": "tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json && node fixup.js",
    "define": "dts-bundle-generator --config ./dts.config.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
