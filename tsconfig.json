{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "es2015",
      "esnext"
    ],
    "sourceMap": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noUnusedLocals": false,
    "strictPropertyInitialization": false,
    "removeComments": true,
  },
  "include": [
    "./src/**/*"
  ]
}